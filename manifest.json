{
  "manifest_version": 2,
  "name": "Kokoro TTS",
  "version": "1.0",
  "description": "Text-to-Speech using Kokoro model",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "http://localhost:8000/*",
    "notifications"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Kokoro TTS",
    "default_icon": {
      "48": "icons/icon-48.png"
    }
  },
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "web_accessible_resources": [
    "player.html",
    "player.js"
  ]
}

